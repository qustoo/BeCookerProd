<% if @category.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @category do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_area :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit t('categories.form.submit', action: @category.new_record?  ? 'Создать' : 'Изменить'), class: 'btn btn-primary' %>
    <%= link_to 'Назад',recipes_path, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
